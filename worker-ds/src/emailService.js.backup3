export class EmailService {
  constructor(apiKey, fromEmail = 'onboarding@resend.dev', fromName = 'Pesquisas DS') {
    this.apiKey = apiKey;
    this.fromEmail = fromEmail;
    this.fromName = fromName;
  }

  async sendEmail(to, subject, htmlContent, textContent = null) {
    try {
      console.log(`üìß Enviando email para ${to} via Resend...`);

      const emailData = {
        from: `${this.fromName} <${this.fromEmail}>`,
        to: [to],
        subject: subject,
        html: htmlContent
      };

      // Adicionar texto plano se fornecido
      if (textContent) {
        emailData.text = textContent;
      }

      const response = await fetch('https://api.resend.com/emails', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${this.apiKey}`
        },
        body: JSON.stringify(emailData)
      });

      if (response.ok) {
        const result = await response.json();
        console.log(`‚úÖ Email enviado com sucesso! ID: ${result.id}`);
        return { success: true, id: result.id };
      } else {
        const error = await response.json();
        console.error(`‚ùå Erro Resend: ${response.status}`, error);
        return { success: false, error: JSON.stringify(error) };
      }

    } catch (error) {
      console.error('‚ùå Erro ao enviar email:', error);
      return { success: false, error: error.message };
    }
  }

